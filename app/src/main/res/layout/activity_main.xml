<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texview_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#000"
        android:textSize="60sp"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_start_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Start"
        app:layout_constraintEnd_toStartOf="@+id/button_reset_id"
        app:layout_constraintStart_toStartOf="@+id/texview_countdown"
        app:layout_constraintTop_toBottomOf="@+id/texview_countdown" />

    <Button
        android:id="@+id/button_reset_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/button_start_id"
        app:layout_constraintEnd_toEndOf="@+id/texview_countdown"
        app:layout_constraintStart_toEndOf="@+id/button_start_id"
        app:layout_constraintTop_toTopOf="@+id/button_start_id" />

</androidx.constraintlayout.widget.ConstraintLayout>